                     , mongoDB
                     , unliftio
                     , persistent
                     , persistent-mongoDB
                     , template-haskell
                     , servant
                     , servant-server
                     , text
                     , transformers
                     , wai
                     , wai-middleware-prometheus
                     , prometheus-client
                     , prometheus-metrics-ghc
                     , warp
                     , conferer
                     , conferer-warp
                     , co-log
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -O2 -threaded -rtsopts -with-rtsopts=-T -Wall